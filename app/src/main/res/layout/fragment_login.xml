<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.auth.signin.LoginFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/rasa_medium"
        android:text="@string/get_lyft_d"
        android:textColor="@color/black"
        android:textSize="@dimen/_38ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/login"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="@string/enter_your_login_details_to_access_your_account"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:background="@drawable/edit_text_bg"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_face_id"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view" />

            <EditText
                android:id="@+id/phone_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/montserrat_medium"
                android:hint="@string/phone_number"
                android:layout_marginTop="@dimen/_17sdp"
                android:inputType="phone"
                android:paddingStart="@dimen/_45sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_20ssp"
                android:src="@drawable/ic_phone"
                app:layout_constraintBottom_toBottomOf="@+id/phone_et"
                app:layout_constraintStart_toStartOf="@+id/phone_et"
                app:layout_constraintTop_toTopOf="@+id/phone_et" />

            <EditText
                android:id="@+id/password_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/montserrat_medium"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="@dimen/_45sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_et" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:src="@drawable/ic_hide_eye"
                app:layout_constraintBottom_toBottomOf="@+id/password_et"
                app:layout_constraintEnd_toEndOf="@+id/password_et"
                app:layout_constraintTop_toTopOf="@+id/password_et" />

            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_20ssp"
                android:src="@drawable/ic_password"
                app:layout_constraintBottom_toBottomOf="@+id/password_et"
                app:layout_constraintStart_toStartOf="@+id/password_et"
                app:layout_constraintTop_toTopOf="@+id/password_et" />

            <TextView
                android:id="@+id/forgot_password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/forgot_password"
                android:textColor="@color/wood_black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="@+id/password_et"
                app:layout_constraintTop_toBottomOf="@+id/password_et" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sign_in_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:backgroundTint="@color/main_green"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/sign_in"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="@+id/password_et"
                app:layout_constraintStart_toStartOf="@+id/password_et"
                app:layout_constraintTop_toBottomOf="@+id/password_et" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/or_continue_with"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="@+id/sign_in_btn"
                app:layout_constraintStart_toStartOf="@+id/sign_in_btn"
                app:layout_constraintTop_toBottomOf="@+id/sign_in_btn" />

            <View
                android:id="@+id/google_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/red_round_bg"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="@dimen/_14ssp"
                app:icon="@drawable/ic_google"
                app:layout_constraintEnd_toEndOf="@+id/sign_in_btn"
                app:layout_constraintStart_toStartOf="@+id/sign_in_btn"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_google"
                app:layout_constraintBottom_toBottomOf="@+id/google_btn"
                app:layout_constraintEnd_toEndOf="@+id/sign_in_btn"
                app:layout_constraintStart_toStartOf="@+id/sign_in_btn"
                app:layout_constraintTop_toTopOf="@+id/google_btn" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_17sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="@string/term_cuation"
                android:textColor="@color/grey"
                android:lineSpacingExtra="10dp"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/sign_in_btn"
                app:layout_constraintStart_toStartOf="@+id/sign_in_btn"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_btn" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="New User?"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_17sdp"
                app:layout_constraintEnd_toStartOf="@+id/sign_up_btn"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/sign_in_btn"
                app:layout_constraintTop_toBottomOf="@+id/google_btn" />

            <TextView
                android:id="@+id/sign_up_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/sign_up_under_line"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:textColor="@color/main_green"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintEnd_toEndOf="@+id/sign_in_btn"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="@+id/textView9" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

   </androidx.constraintlayout.widget.ConstraintLayout>