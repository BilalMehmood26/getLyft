<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.vendor.productDetails.ProductsDetailsFragment">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_17sdp"
        android:fontFamily="@font/montserrat_medium"
        android:textStyle="bold"
        android:text="Add New Product"
        android:textColor="@color/wood_black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <ImageView
        android:id="@+id/edit_btn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_17sdp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/textView18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView18" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_20sdp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:src="@drawable/ic_add_store_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sign_in_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:backgroundTint="@color/main_green"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/upload_more_photos"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toTopOf="@+id/upload_one"
                app:layout_constraintEnd_toEndOf="@+id/upload_one"
                app:layout_constraintStart_toEndOf="@+id/upload_one"
                app:layout_constraintTop_toTopOf="@+id/upload_one" />

            <View
                android:id="@+id/upload_one"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/green_border_grey_bg"
                android:src="@drawable/ic_add_more"
                app:layout_constraintEnd_toStartOf="@+id/imageView8"
                app:layout_constraintStart_toStartOf="@+id/sign_in_btn"
                app:layout_constraintTop_toBottomOf="@+id/sign_in_btn" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/_16sdp"
                android:src="@drawable/ic_add_more"
                app:layout_constraintBottom_toBottomOf="@+id/upload_one"
                app:layout_constraintEnd_toEndOf="@+id/upload_one"
                app:layout_constraintStart_toStartOf="@+id/upload_one"
                app:layout_constraintTop_toTopOf="@+id/upload_one" />

            <View
                android:id="@+id/upload_two"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:background="@drawable/green_border_grey_bg"
                android:src="@drawable/ic_add_more"
                app:layout_constraintEnd_toStartOf="@+id/upload_three"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/sign_in_btn" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/_16sdp"
                android:src="@drawable/ic_add_more"
                app:layout_constraintBottom_toBottomOf="@+id/upload_two"
                app:layout_constraintEnd_toEndOf="@+id/upload_two"
                app:layout_constraintStart_toStartOf="@+id/upload_two"
                app:layout_constraintTop_toTopOf="@+id/upload_two" />

            <View
                android:id="@+id/upload_three"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:background="@drawable/green_border_grey_bg"
                app:layout_constraintEnd_toEndOf="@+id/sign_in_btn"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/sign_in_btn" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/_16sdp"
                android:src="@drawable/ic_add_more"
                app:layout_constraintBottom_toBottomOf="@+id/upload_three"
                app:layout_constraintEnd_toEndOf="@+id/upload_three"
                app:layout_constraintStart_toStartOf="@+id/upload_three"
                app:layout_constraintTop_toTopOf="@+id/upload_three" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toTopOf="@+id/upload_one"
                app:layout_constraintEnd_toEndOf="@+id/upload_one"
                app:layout_constraintStart_toEndOf="@+id/upload_one"
                app:layout_constraintTop_toTopOf="@+id/upload_one" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toTopOf="@+id/upload_three"
                app:layout_constraintEnd_toEndOf="@+id/upload_three"
                app:layout_constraintStart_toEndOf="@+id/upload_three"
                app:layout_constraintTop_toTopOf="@+id/upload_three" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toTopOf="@+id/upload_two"
                app:layout_constraintEnd_toEndOf="@+id/upload_two"
                app:layout_constraintStart_toEndOf="@+id/upload_two"
                app:layout_constraintTop_toTopOf="@+id/upload_two" />

            <EditText
                android:id="@+id/fname_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Product name"
                android:paddingStart="@dimen/_45sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/upload_two" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_20ssp"
                android:src="@drawable/ic_product_name"
                app:layout_constraintBottom_toBottomOf="@+id/fname_et"
                app:layout_constraintStart_toStartOf="@+id/fname_et"
                app:layout_constraintTop_toTopOf="@+id/fname_et" />

            <EditText
                android:id="@+id/price_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Product price"
                android:paddingStart="@dimen/_45sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fname_et" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_20ssp"
                android:src="@drawable/ic_price"
                app:layout_constraintBottom_toBottomOf="@+id/price_et"
                app:layout_constraintStart_toStartOf="@+id/price_et"
                app:layout_constraintTop_toTopOf="@+id/price_et" />

            <EditText
                android:id="@+id/amount_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Product price"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_17sdp"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toStartOf="@+id/unit_drop_down"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/price_et" />

            <Spinner
                android:id="@+id/unit_drop_down"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="@dimen/_20sdp"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="@+id/amount_et"
                app:layout_constraintEnd_toEndOf="@+id/price_et"
                app:layout_constraintTop_toTopOf="@+id/amount_et" />

            <TextView
                android:id="@+id/textView69"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Nictotine Level"
                android:textColor="@color/grey"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintStart_toStartOf="@+id/amount_et"
                app:layout_constraintTop_toBottomOf="@+id/amount_et" />


            <com.google.android.material.slider.RangeSlider
                android:id="@+id/rangeSlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="5000"
                app:layout_constraintEnd_toEndOf="@+id/unit_drop_down"
                app:layout_constraintStart_toStartOf="@+id/textView69"
                app:layout_constraintTop_toBottomOf="@+id/textView69"
                app:values="@array/rangeSlider" />

            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="0"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="@+id/rangeSlider"
                app:layout_constraintTop_toBottomOf="@+id/rangeSlider" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="5000$"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="@+id/rangeSlider"
                app:layout_constraintTop_toBottomOf="@+id/rangeSlider" />

            <TextView
                android:id="@+id/textView70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="THC potency level"
                android:textColor="@color/grey"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintStart_toStartOf="@+id/amount_et"
                app:layout_constraintTop_toBottomOf="@+id/textView0" />


            <com.google.android.material.slider.RangeSlider
                android:id="@+id/rangeSlider2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="5000"
                app:layout_constraintEnd_toEndOf="@+id/unit_drop_down"
                app:layout_constraintStart_toStartOf="@+id/textView70"
                app:layout_constraintTop_toBottomOf="@+id/textView70"
                app:values="@array/rangeSlider" />


            <TextView
                android:id="@+id/textView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="0"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="@+id/rangeSlider2"
                app:layout_constraintTop_toBottomOf="@+id/rangeSlider2" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="5000$"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="@+id/rangeSlider2"
                app:layout_constraintTop_toBottomOf="@+id/rangeSlider2" />

            <Spinner
                android:id="@+id/category_drop_down"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="@dimen/_20sdp"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="@+id/price_et"
                app:layout_constraintStart_toStartOf="@+id/textView01"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <TextView
                android:id="@+id/textVie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Sub-Category"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="@+id/category_drop_down"
                app:layout_constraintTop_toBottomOf="@+id/category_drop_down" />

            <ImageView
                android:id="@+id/imageView36"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:src="@drawable/ic_energized"
                app:layout_constraintEnd_toStartOf="@+id/imageView37"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/textVie"
                app:layout_constraintTop_toBottomOf="@+id/textVie" />

            <TextView
                android:id="@+id/textView73"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Energized"
                android:textColor="@color/grey"
                android:textSize="@dimen/_7ssp"
                app:layout_constraintEnd_toEndOf="@+id/imageView36"
                app:layout_constraintStart_toStartOf="@+id/imageView36"
                app:layout_constraintTop_toBottomOf="@+id/imageView36" />

            <ImageView
                android:id="@+id/imageView37"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:src="@drawable/ic_sleepy"
                android:layout_marginStart="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/imageView39"
                app:layout_constraintStart_toEndOf="@+id/imageView36"
                app:layout_constraintTop_toBottomOf="@+id/textVie" />

            <TextView
                android:id="@+id/textView74"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Sleepy"
                android:textColor="@color/grey"
                android:textSize="@dimen/_7ssp"
                app:layout_constraintEnd_toEndOf="@+id/imageView37"
                app:layout_constraintStart_toStartOf="@+id/imageView37"
                app:layout_constraintTop_toBottomOf="@+id/imageView36" />

            <ImageView
                android:id="@+id/imageView39"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:src="@drawable/ic_relaxed"
                android:layout_marginStart="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/imageView40"
                app:layout_constraintStart_toEndOf="@+id/imageView37"
                app:layout_constraintTop_toBottomOf="@+id/textVie" />

            <TextView
                android:id="@+id/textView75"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Relaxed"
                android:textColor="@color/grey"
                android:textSize="@dimen/_7ssp"
                app:layout_constraintEnd_toEndOf="@+id/imageView39"
                app:layout_constraintStart_toStartOf="@+id/imageView39"
                app:layout_constraintTop_toBottomOf="@+id/imageView36" />

            <ImageView
                android:id="@+id/imageView40"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:src="@drawable/ic_fruity"
                android:layout_marginStart="@dimen/_8sdp"
                app:layout_constraintStart_toEndOf="@+id/imageView39"
                app:layout_constraintTop_toBottomOf="@+id/textVie" />

            <TextView
                android:id="@+id/textView76"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Fruity"
                android:textColor="@color/grey"
                android:textSize="@dimen/_7ssp"
                app:layout_constraintEnd_toEndOf="@+id/imageView40"
                app:layout_constraintStart_toStartOf="@+id/imageView40"
                app:layout_constraintTop_toBottomOf="@+id/imageView36" />

            <androidx.cardview.widget.CardView
                android:id="@+id/change_password"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:maxHeight="@dimen/_100sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/_7sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView73">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_strokes"
                    android:padding="@dimen/_7sdp">

                    <EditText
                        android:id="@+id/textView434"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:background="@null"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="top"
                        android:hint="Description"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:backgroundTint="@color/main_green"
                android:fontFamily="@font/montserrat_medium"
                android:text="Add"
                android:layout_marginTop="@dimen/_17sdp"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/change_password" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>